{
  "root": "buildColumnsFromSelection",
  "description": "",
  "variables": {
    "event": {
      "type": "object",
      "input": "fromCaller"
    }
  },
  "actions": {
    "buildColumnsFromSelection": {
      "module": "buildColumnsFromSelection",
      "parameters": {
        "selectedFields": "{{ $variables.event.value }}",
        "columnOptions": "{{ $page.variables.columnOptions }}"
      },
      "outcome": "assignVariablesColumns"
    },
     "assignVariablesColumns": {
       "module": "vb/action/builtin/assignVariablesAction",
       "parameters": {
         "$page.variables.Columns": {
           "source": "{{ $chain.buildColumnsFromSelection.result }}"
         }
       }
     }
  }
}
